<%= form_for @tour do |f| %>

  <% if @tour.errors.any? %>
    <div class="card" style="position: unset; width: 598px; margin: 2.5rem auto; border-left: 4px solid #E01765; background-color: #F9F9F9;">
      <div class="card-body" style="padding-top: 1rem; padding-bottom: 0rem;">
        <div id="error_explanation">
          <h6 style="font-weight: bold">
            <%= pluralize(@tour.errors.count, "Error") %> prohibited
            this tour from being created:
          </h6>
          <ul>
            <% @tour.errors.full_messages.each do |msg| %>
              <h6 style="font-weight: normal; margin-left: -1.5rem;">
                        <span style="margin-right: 0.3rem;">
                          <svg aria-hidden="true" data-prefix="fas" data-icon="circle" class="svg-inline--fa fa-circle fa-w-16" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" height="6" width="6"><path fill="#E01765" d="M256 8C119 8 8 119 8 256s111 248 248 248 248-111 248-248S393 8 256 8z"></path></svg>
                        </span>
                <%= msg %>.<br>
              </h6>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="card" style="position: unset; width: 598px; margin: 2.5rem auto;">
    <div class="card-body">
      <h5 class="card-title" style="position: unset; font-size: 1.4em; font-style: inherit; font-weight: 600; letter-spacing: -.01em; line-height: 1; color: #172B4D;">Create a tour</h5>

      <section style="border-top: 1px solid #DFE1E6;">
        <form style="margin-top: 1rem; margin-bottom: 1rem">

          <div class="container">
            <!-- Name -->
            <div class="row" style="margin-top: 0.5rem">
              <!-- fisrt name -->
              <div class="col-xs-2">
                <%= f.label :country, :class => "col-form-label", :style => "font-weight: bold !important; color: #707070; margin-left: 0rem; margin-right: 0.5rem; font-size: 14px; font-style: normal;font-weight: 400;line-height: 1.43;"  %>
              </div>
              <div class="col-xs-4">
                <%= f.text_field :country, :type => "text", :class => "form-control", :style => "height: 32px; max-width: 200px; margin: auto 0;" %>
              </div>

              <div class="col-xs-4">
                <%= f.label :workspace_id, "Workspace ID", :class => "col-form-label", :style => "color: #707070; margin-left: 1rem; margin-right: 0.5rem; font-size: 14px; font-style: normal;font-weight: 400;line-height: 1.43;" %>
              </div>
              <div class="col-xs-6">
                <%= f.text_field :workspace_id, :placeholder => "XX XX", :type => "text", :class => "form-control", :style => "height: 32px; max-width: 90px; margin: auto 0;" %>
              </div>

              <div class="col-xs-4">
                <%= f.label :user_id, "User ID", :class => "col-form-label", :style => "color: #707070; margin-left: 1rem; margin-right: 0.5rem; font-size: 14px; font-style: normal;font-weight: 400;line-height: 1.43;" %>
              </div>
              <div class="col-xs-6">
                <%= f.text_field :user_id, :placeholder => "XX XX", :type => "text", :class => "form-control", :style => "height: 32px; max-width: 90px; margin: auto 0;" %>
              </div>
            </div>

            <%= f.fields_for :destinations do |builder| %>

            <!-- Address -->
            <div class="row" style="margin-top: 1.5rem; margin-left: 0.935rem;">

              <div class="col-xs-4">
                <%= builder.label :city, :class => "col-form-label", :style => "color: #707070;margin-right: 0.5rem; font-size: 14px; font-style: normal;font-weight: 400;line-height: 1.43;" %>
              </div>
              <div class="col-xs-6">
                <%= builder.text_field :city, :type => "text", :class => "form-control", :style => "height: 32px; max-width: 90px; margin: auto 0;" %>
              </div>

              <div class="col-xs-4">
                <%= builder.label :duration, :class => "col-form-label", :style => "color: #707070; margin-left: 1rem; margin-right: 0.5rem; font-size: 14px; font-style: normal;font-weight: 400;line-height: 1.43;" %>
              </div>
              <div class="col-xs-6">
                <%= builder.text_field :duration, :type => "text", :class => "form-control", :style => "height: 32px; max-width: 90px; margin: auto 0;" %>
              </div>

              <div class="col-xs-4">
                <%= builder.label :meals, :class => "col-form-label", :style => "color: #707070; margin-left: 0.5rem; margin-right: 0.5rem; font-size: 14px; font-style: normal;font-weight: 400;line-height: 1.43;" %>
              </div>
              <div class="col-xs-6">
                <%= builder.text_field :meals, :type => "text", :class => "form-control", :style => "height: 32px; max-width: 90px; margin: auto 0;" %>
              </div>
            </div>

            <div class="row" style="margin-top: 0.5rem; margin-bottom: 1rem; margin-left: 0rem;">

              <div class="col-xs-4">
                <%= builder.label :workspace_id, "Workspace ID", :class => "col-form-label", :style => "color: #707070; margin-right: 0.5rem; font-size: 14px; font-style: normal;font-weight: 400;line-height: 1.43;" %>
              </div>
              <div class="col-xs-6">
                <%= builder.text_field :workspace_id, :placeholder => "XX XX", :type => "text", :class => "form-control", :style => "height: 32px; max-width: 90px; margin: auto 0;" %>
              </div>

              <div class="col-xs-4">
                <%= builder.label :user_id, "User ID", :class => "col-form-label", :style => "color: #707070; margin-left: 1rem; margin-right: 0.5rem; font-size: 14px; font-style: normal;font-weight: 400;line-height: 1.43;" %>
              </div>
              <div class="col-xs-6">
                <%= builder.text_field :user_id, :placeholder => "XX XX", :type => "text", :class => "form-control", :style => "height: 32px; max-width: 90px; margin: auto 0;" %>
              </div>
            <% end %>

            </div>
          </div>
        </form>
      </section>

      <section>
        <div style="margin-top: 0rem; float: right;">
          <%= f.submit :Submit, :class => "btn btn_color" %>
          <%= link_to 'Back', dashboard_overview_path, :class => "btn btn_color"%>
        </div>
      </section>

    </div>
  </div>
<% end %>


